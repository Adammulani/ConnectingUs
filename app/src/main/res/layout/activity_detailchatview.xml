<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conversation.DetailChatView"
    android:background="#F6F6F6">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linlyot1" />

    <LinearLayout
        android:id="@+id/linlyot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">


        <EditText
            android:id="@+id/edMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/enter_msg_background"
            android:hint="Enter Message Here"
            android:inputType="textAutoCorrect|textMultiLine|text|textAutoComplete|textImeMultiLine"
            android:padding="10dp"
            android:textColor="@color/black"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideInset"/>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/send_btn" />

    </LinearLayout>

</RelativeLayout>